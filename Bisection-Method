Bisection-Method Code:-

      
#include <stdio.h>
#include <math.h>

// Define the function f(x)
float f(float x) {
    return x*x*x - x - 2;  // Example: f(x) = xÂ³ - x - 2
}

int main() {
    float a = 1.0, b = 2.0, c;
    int max_iter = 100, iter = 0;
    float tolerance = 0.0001;

    if (f(a) * f(b) >= 0) {
        printf("Invalid initial interval. f(a) and f(b) must have opposite signs.\n");
        return -1;
    }

    printf("Iter\t a\t b\t c\t f(c)\n");

    do {
        c = (a + b) / 2;
        printf("%d\t %.4f\t %.4f\t %.4f\t %.4f\n", iter+1, a, b, c, f(c));

        if (fabs(f(c)) < tolerance)
            break;

        if (f(a) * f(c) < 0)
            b = c;
        else
            a = c;

        iter++;
    } while (iter < max_iter);

    printf("\nApproximate root: %.4f\n", c);
    return 0;
}

